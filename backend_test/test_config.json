    "metrics_file": "performance_metrics.json"
  },
  "reporting": {
    "generate_charts": true,
    "chart_format": "png",
    "chart_dpi": 300,
    "save_detailed_results": true,
    "output_directory": "performance_reports",
    "include_system_info": true,
    "include_performance_analysis": true
  },
  "system_info": {
