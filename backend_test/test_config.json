  "performance_thresholds": {
    "excellent": {
      "max_response_time": 0.1,
      "min_throughput": 100,
      "max_error_rate": 0.01,
      "description": "Excellent Performance"
    },
    "good": {
      "max_response_time": 0.5,
      "min_throughput": 50,
      "max_error_rate": 0.05,
      "description": "Good Performance"
    },
    "average": {
      "max_response_time": 1.0,
      "min_throughput": 20,
      "max_error_rate": 0.1,
      "description": "Average Performance"
    },
    "poor": {
      "max_response_time": 2.0,
      "min_throughput": 10,
      "max_error_rate": 0.2,
      "description": "Poor Performance"
    },
    "very_poor": {
      "max_response_time": 5.0,
      "min_throughput": 5,
      "max_error_rate": 0.5,
      "description": "Very Poor Performance"
    }
  },
  "load_test_scenarios": [
    {
      "name": "Light Load Test",
      "concurrent_users": 10,
      "duration": 60,
      "description": "Test system performance under light load"
    },
    {
      "name": "Medium Load Test",
      "concurrent_users": 50,
      "duration": 300,
      "description": "Test system performance under medium load"
    },
    {
      "name": "High Load Test",
      "concurrent_users": 100,
      "duration": 600,
      "description": "Test system performance under high load"
    },
    {
      "name": "Stress Test",
      "concurrent_users": 200,
      "duration": 900,
      "description": "Test system performance under extreme load"
    }
